<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <corners
                android:radius="40dp"/>
            <solid
                android:color="@color/button_gray_dark"/>
            <stroke
                android:width="2dp"
                android:color="@color/black"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:radius="40dp"/>
            <solid
                android:color="@color/button_gray_light"/>
            <stroke
                android:width="2dp"
                android:color="@color/black"/>
        </shape>
    </item>

</selector>
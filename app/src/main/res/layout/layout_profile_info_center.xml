<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Toolbar top -->
        <RelativeLayout
            android:id="@+id/relativeLayoutInProfileCenter1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <include layout="@layout/header_profile" />

        </RelativeLayout>


        <!--Mid section-->
        <RelativeLayout
            android:id="@+id/relativeLayoutInProfileCenter2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relativeLayoutInProfileCenter1"
            android:background="@drawable/border_bottom">

            <LinearLayout
                android:id="@+id/linearLayoutLayoutInProfileCenter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="25">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="2dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="75">

                    <include layout="@layout/layout_profile_info_top" />

                </RelativeLayout>

            </LinearLayout>

            <!--Bottom section - profile name and description-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayoutLayoutInProfileCenter1"
                android:orientation="vertical"
                android:padding="25dp">

                <!-- TODO Statyczne wpisywany nickname -->
                <TextView
                    android:id="@+id/profileNameDisplayUnderPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wojtek120"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/profileDescriptionDisplayUnderPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opis mojego profilu"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</merge>
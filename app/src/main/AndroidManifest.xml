<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wojtek120.personaltrainer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".startup.StartUp"
        android:largeHeap="true">
        <activity android:name=".home.MainActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".predefined.PredefinedPlansActivity_" />
        <activity android:name=".stats.StatsActivity_" />
        <activity android:name=".plans.PlansActivity_" />
        <activity android:name=".plans.DaysActivity_" />
        <activity android:name=".plans.ExercisesActivity_" />
        <activity android:name=".profile.ProfileActivity_" />
        <activity android:name=".profile.ProfileSettingsActivity_" />
        <activity android:name=".authentication.LoginActivity_" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".authentication.RegisterActivity_" android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".profile.photo.EditProfilePhotoActivity_" />
    </application>

</manifest>